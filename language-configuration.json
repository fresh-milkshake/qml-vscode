{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"]
    ],
    "autoClosingPairs": [
        {"open": "{", "close": "}", "notIn": ["string", "comment"]},
        {"open": "[", "close": "]", "notIn": ["string", "comment"]},
        {"open": "(", "close": ")", "notIn": ["string", "comment"]},
        {"open": "\"", "close": "\"", "notIn": ["string", "comment"]},
        {"open": "'", "close": "'", "notIn": ["string", "comment"]},
        {"open": "<", "close": ">", "notIn": ["string", "comment"]}
    ],
    "surroundingPairs": [
        {"open": "{", "close": "}", "notIn": ["string", "comment"]},
        {"open": "[", "close": "]", "notIn": ["string", "comment"]},
        {"open": "(", "close": ")", "notIn": ["string", "comment"]},
        {"open": "\"", "close": "\"", "notIn": ["string", "comment"]},
        {"open": "'", "close": "'", "notIn": ["string", "comment"]},
        {"open": "<", "close": ">", "notIn": ["string", "comment"]}
    ],
    "wordPattern": "[A-Za-z_$][A-Za-z0-9_$]*"
}
